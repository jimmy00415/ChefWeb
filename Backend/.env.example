# ChefWeb Backend Environment Variables
# Copy this file to .env and fill in your values

# Server
PORT=4000
NODE_ENV=development

# Database (PostgreSQL)
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:password@localhost:5432/chefweb
DATABASE_SSL=false

# Stripe (Payment Processing)
STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_secret_here

# SendGrid (Email)
SENDGRID_API_KEY=SG.your_api_key_here
EMAIL_FROM=booking@pophabachi.com
EMAIL_ADMIN=admin@pophabachi.com

# Admin Dashboard
ADMIN_API_KEY=your_secure_random_key_here

# OpenAI (AI Chatbot)
OPENAI_API_KEY=sk-your-key-here

# Video Configuration
VIDEO_HOMEPAGE_URL=
VIDEO_HOMEPAGE_THUMBNAIL=
